      </TextField>
      <TextField fx:id="txtName" layoutX="216.0" layoutY="71.0" promptText="Product Name">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="txtUnitPrice" layoutX="420.0" layoutY="71.0" promptText="Unit Price">
